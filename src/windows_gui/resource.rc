#include <windows.h>

// Application Icon (you can add a custom icon file later)
// IDI_APP_ICON ICON "app_icon.ico"

// Version Information
VS_VERSION_INFO VERSIONINFO
FILEVERSION 1,0,0,0
PRODUCTVERSION 1,0,0,0
FILEFLAGSMASK VS_FFI_FILEFLAGSMASK
#ifdef _DEBUG
    FILEFLAGS VS_FF_DEBUG
#else
    FILEFLAGS 0x0L
#endif
FILEOS VOS__WINDOWS32
FILETYPE VFT_APP
FILESUBTYPE VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904E4"
        BEGIN
            VALUE "CompanyName", "DSA Learning Project"
            VALUE "FileDescription", "30-Day DSA Challenge Learning Tool"
            VALUE "FileVersion", "1.0.0.0"
            VALUE "InternalName", "DSA_Learning"
            VALUE "LegalCopyright", "MIT License"
            VALUE "OriginalFilename", "DSA_Learning.exe"
            VALUE "ProductName", "DSA 30-Day Challenge"
            VALUE "ProductVersion", "1.0.0.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1252
    END
END
